#!/bin/sh

ME=schxslt

include() {
  if [ ! $2 ]; then
    echo "$ME include [source] [target] (arguments)"
    exit
  fi

  source=$(_source "$1")
  target=$(_target "$2")
  shift 2

  xslt \
    -xsl:/scripts/schxslt/include.xsl \
    $source \
    $target \
    "$@"
}

expand() {
  if [ ! $2 ]; then
    echo "$ME expand [source] [target] (arguments)"
    exit
  fi

  source=$(_source "$1")
  target=$(_target "$2")
  shift 2

  xslt \
    -xsl:/scripts/schxslt/expand.xsl \
    $source \
    $target \
    "$@"
}

prepare() {
  if [ ! $2 ]; then
    echo "$ME prepare [source] [target] (arguments)"
    exit
  fi

  source="$1"
  target="$2"
  shift 2

  include $source - "$@" | expand - $target "$@"
}

compile() {
  if [ ! $2 ]; then
    echo "$ME compile [source] [target] (arguments)"
    exit
  fi

  source=$(_source "$1")
  target=$(_target "$2")
  shift 2

  xslt \
    -xsl:/scripts/schxslt/compile-for-svrl.xsl \
    $source \
    $target \
    "$@"
}

if [ ! $1 ]; then
  echo "Available functions:"
  echo "* include"
  echo "* expand"
  echo "* prepare (include + expand)"
  echo "* compile"
  exit
fi

$@
